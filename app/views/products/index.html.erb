<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>Products</h1>
    </div>
  </div>
  <div class="row mb-4 text-right">
    <div class="col-lg-8 offset-lg-2">
      <%= link_to  "Crear Producto", new_product_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 offset-lg-2">      
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Categor√≠as</th>
            <th></th>
          </tr>
        </thead>
        <tbody> 
          <% @products.each do |product|%>           
            <tr>              
              <td>
                <div><%= product.name %></div>
              </td>         
              <td>
                <div><%= number_with_precision (number_to_currency product.price, precision: 0) %></div>
              </td>         
              <td>
                <div> <%= product.categories.map(&:name).sort.join(", ") %> </div>            
              </td>          
              <td>
                <div>
                  <%= link_to  "editar", edit_product_path(product) %> 
                  <%= link_to  " eliminar", product_path(product), method: :delete, data: { confirm: 'Esta seguro de eliminar el Producto ?' }%>
                </div>                 
              </td>                   
            </tr>
          <% end %> 
        </tbody>
      </table>     
    </div>
  </div>
</div>